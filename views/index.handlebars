<!--Banner, add new burger-->
<section class="is-hero">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title is-1 has-text-white has-text-centered">Eat Da Burger</h1>
            <img src="/assets/img/burger-logo.png" alt="">
            
            <div class="field is-grouped is-grouped-centered">
                <div class="control">
                    <input type="text is-primary" class="input" name="burger">
                </div>
                <div class="control">
                    <button class="button is-primary" id="submit">Add</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!--burgers displayed here-->
<section class="container">

    <div class="columns">

        <div class="column is-half">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burger}}
                {{/unless}} 
            {{/each}}
        </div>

        <div class="column is-half">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burger}}
                {{/if}}
            {{/each}}
        </div> 
        
    </div>
        
    

</section>

